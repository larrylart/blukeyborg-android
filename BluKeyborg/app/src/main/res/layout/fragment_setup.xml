<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setupRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top blue bar (same style as settings) -->
    <LinearLayout
        android:id="@+id/setupTopBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/blue_700"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="@string/cd_back" />

        <!-- Centered title -->
        <TextView
            android:id="@+id/setupTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Setup"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Right spacer (keeps title centered) -->
        <View
            android:layout_width="36dp"
            android:layout_height="36dp" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:id="@+id/setupContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="18dp"
        android:paddingBottom="16dp">

        <ScrollView
            android:id="@+id/setupScroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

			<LinearLayout
				android:id="@+id/setupInnerRoot"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:paddingBottom="12dp"
				android:gravity="center_vertical">

				<!-- INTRO sections -->
				<LinearLayout
				    android:id="@+id/setupIntroSection"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:gravity="center_vertical"
					android:paddingBottom="12dp">

					<!-- Before you start -->
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Before you start"
						android:textSize="19sp"
						android:textStyle="bold"
						android:gravity="center_horizontal"
						android:textColor="@android:color/black"
						android:paddingBottom="8dp" />


					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:background="@drawable/bg_setup_section"
						android:padding="14dp">

					<TextView
						android:id="@+id/setupBeforeText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="15sp"
						android:textColor="#444444"
						android:lineSpacingExtra="6dp" />


							
					</LinearLayout>

					<!-- Spacer -->
					<View
						android:layout_width="match_parent"
						android:layout_height="28dp" />

					<!-- What happens next -->
					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="What will happen next"
						android:textSize="19sp"
						android:textStyle="bold"
						android:gravity="center_horizontal"
						android:textColor="@android:color/black"
						android:paddingBottom="8dp" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:background="@drawable/bg_setup_section"
						android:padding="14dp">

					<TextView
						android:id="@+id/setupStepsText"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="15sp"
						android:textColor="#444444"
						android:lineSpacingExtra="6dp" />
							
					</LinearLayout>

				</LinearLayout>

				<!-- PROGRESS (new) -->
				<LinearLayout
					android:id="@+id/setupProgressSection"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:visibility="gone">

					<TextView
						android:id="@+id/setupProgressTitle"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:text="Setting up your dongleâ€¦"
						android:textSize="20sp"
						android:textStyle="bold"
						android:textColor="@android:color/black"
						android:gravity="center_horizontal"
						android:paddingBottom="10dp" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:background="@drawable/bg_setup_section"
						android:padding="16dp">

						<TextView
							android:id="@+id/setupProgressBody"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:text="Please keep the dongle nearby. This may take a few seconds."
							android:textSize="16sp"
							android:textStyle="bold"
							android:textColor="#333333"
							android:lineSpacingExtra="8dp"
							android:paddingBottom="12dp" />

						<LinearLayout
							android:id="@+id/setupProgressList"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical" />
					</LinearLayout>

				</LinearLayout>


			</LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/setupButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_marginTop="12dp" />
    </LinearLayout>

</LinearLayout>
