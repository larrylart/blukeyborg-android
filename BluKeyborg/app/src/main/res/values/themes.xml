<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BluKeyborg" parent="Theme.Material3.DayNight.NoActionBar">

    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowDisablePreview">true</item>


    <!-- REMOVE SPLASH SCREEN -->
    <item name="android:windowSplashScreenAnimatedIcon">@null</item>
    <item name="android:windowSplashScreenBackground">@android:color/transparent</item>
<!--
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
-->
    </style>
	
	<style name="Theme.BluKeyborg.SharePopup" parent="Theme.BluKeyborg">
		<!-- Make the activity window fullscreen + transparent -->
		<item name="android:windowIsFloating">false</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>

		<!-- Remove default dialog overlays/insets -->
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:backgroundDimEnabled">false</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	
	
</resources>
